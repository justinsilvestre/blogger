<%= form_for(@article, html: {multipart: true}) do |f| %>
	<% if @article.errors.any? %>
		<h2>
			<%= pluralize @article.errors.count, "error" %> prohibited this article from being saved:
		</h2>
		<ul>
		<% @article.errors.full_messages.each do |error| %>
			<li><%= error %></li>
		<% end %>
		</ul>
	<% end %>
	<p>
		<%= f.label :title %><br />
		<%= f.text_field :title %>
	</p>
	<%= image_tag @article.image.url(:thumb) if @article.image.exists? %>
	<p>
		<%= f.label :body %><br />
		<%= f.text_area :body %>
	</p>
	<p>
		<%= f.label :tag_list %>
		<%= f.text_field :tag_list %>
	</p>
	<p>
		<%= f.label :image, @article.image.exists? ? "Change Image" : "Attach an Image" %><br />
		<%= f.file_field :image %>
	</p>
	<p>
		<%= f.submit %>
	</p>
<% end %>